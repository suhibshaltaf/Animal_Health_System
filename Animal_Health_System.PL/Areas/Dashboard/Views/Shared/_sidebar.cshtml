@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="#" class="brand-link">
        <img src="~/Dashboard/dist/img/logo.webp" alt="Animal careLogo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Animal care</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <!--                <img src="~/Dashboard/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">

                -->


            </div>
            <div class="info">
                @if (SignInManager.IsSignedIn(User))
                {
                    var user = await UserManager.GetUserAsync(User);

                    <li class="nav-item d-flex align-items-center">
                        <span class="nav-link text-primary fw-bold">
                            Welcome, @(user.FullName)
                        </span>
                    </li>

                    <li class="nav-item d-flex align-items-center">
                        <span class="nav-link text-primary fw-bold" style="display: block;">
                            The Role Is: @(user?.Role)
                        </span>
                    </li>
                }
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a asp-controller="Animal" asp-action="Index" class="nav-link bg-primary">
                        <i class="nav-icon fas fa-paw"></i>
                        <p>Animal</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Birth" asp-action="Index" class="nav-link bg-warning">
                        <i class="nav-icon fas fa-baby"></i>
                        <p>Birth</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Farm" asp-action="Index" class="nav-link bg-dark">
                        <i class="nav-icon fas fa-leaf"></i>
                        <p>Farm</p>
                    </a>
                </li>
                @if (User.IsInRole("Owner")){
                <li class="nav-item">
                    <a asp-controller="FarmStaff" asp-action="Index" class="nav-link bg-pink">
                        <i class="nav-icon fas fa-users"></i>
                        <p>Farm Staff</p>
                    </a>
                    </li>
                }

                <li class="nav-item">
                    <a asp-controller="Mating" asp-action="Index" class="nav-link bg-lime">
                        <i class="nav-icon fas fa-heart"></i>
                        <p>Mating</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="MedicalExamination" asp-action="Index" class="nav-link bg-indigo">
                        <i class="nav-icon fas fa-clipboard"></i>
                        <p>Medical Examination</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="MedicalRecord" asp-action="Index" class="nav-link bg-purple">
                        <i class="nav-icon fas fa-file-medical"></i>
                        <p>Medical Record</p>
                    </a>
                </li>
                @if ( User.IsInRole("Veterinarian"))
                {
                    <li class="nav-item">
                        <a asp-controller="Medication" asp-action="Index" class="nav-link bg-orange">
                            <i class="nav-icon fas fa-pills"></i>
                            <p>Medication</p>
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a asp-controller="Owner" asp-action="Index" class="nav-link bg-red">
                        <i class="nav-icon fas fa-user"></i>
                        <p>Owner</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Pregnancy" asp-action="Index" class="nav-link bg-indigo">
                        <i class="nav-icon fas fa-baby"></i>
                        <p>Pregnancy</p>
                    </a>
                </li>
                @if (User.IsInRole("Veterinarian"))
                {
                    <li class="nav-item">
                        <a asp-controller="Vaccine" asp-action="Index" class="nav-link bg-pink">
                        <i class="nav-icon fas fa-syringe"></i>
                        <p>Vaccine</p>
                    </a>
                </li>}
                <li class="nav-item">
                    <a asp-controller="VaccineHistory" asp-action="Index" class="nav-link bg-teal">
                        <i class="nav-icon fas fa-history"></i>
                        <p>Vaccine History</p>
                    </a>
                </li>
          
                <li class="nav-item">
                    <a asp-controller="Veterinarian" asp-action="Index" class="nav-link bg-lime">
                        <i class="nav-icon fas fa-user-md"></i>
                        <p>Veterinarian</p>
                    </a>
                </li>

                <h1 class="text-danger">
                    Future work
               </h1>
                <li class="nav-item">
                    <a  class="nav-link bg-secondary">
                        <i class="nav-icon fas fa-heartbeat"></i>
                        <p>Animal Health History</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-success">
                        <i class="nav-icon fas fa-calendar-alt"></i>
                        <p>Appointment</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-info">
                        <i class="nav-icon fas fa-history"></i>
                        <p>Appointment History</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-danger">
                        <i class="nav-icon fas fa-calendar-check"></i>
                        <p>Breeding Report</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-light">
                        <i class="nav-icon fas fa-stethoscope"></i>
                        <p>Farm Health Summary</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-teal">
                        <i class="nav-icon fas fa-file-medical"></i>
                        <p>Health Report</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-info">
                        <i class="nav-icon fas fa-capsules"></i>
                        <p>Medication Stock</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-blue">
                        <i class="nav-icon fas fa-bell"></i>
                        <p>Notification</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-teal">
                        <i class="nav-icon fas fa-bell"></i>
                        <p>Pregnancy Notification</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-light">
                        <i class="nav-icon fas fa-file-prescription"></i>
                        <p>Prescription</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-dark">
                        <i class="nav-icon fas fa-industry"></i>
                        <p>Production Record</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-warning">
                        <i class="nav-icon fas fa-cogs"></i>
                        <p>Treatment Plan</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a  class="nav-link bg-info">
                        <i class="nav-icon fas fa-bell"></i>
                        <p>Vaccine Reminder</p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
