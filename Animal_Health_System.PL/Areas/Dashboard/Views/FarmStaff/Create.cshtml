@model FarmStaffFormVM

@section Header {
    <h2 class="text-primary">Create Farm Staff</h2>
}

@section loc {
    <span class="badge bg-success">Create</span>
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">Add New Farm Staff</h3>
        </div>
        <form asp-controller="FarmStaff" asp-action="Create" method="post">
            <div class="card-body">
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <!-- Full Name -->
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter Full Name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Job Title -->
                <div class="form-group mb-3">
                    <label asp-for="JobTitle" class="form-label">Job Title</label>
                    <input asp-for="JobTitle" class="form-control" placeholder="Enter Job Title" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>

                <!-- Phone Number -->
                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Salary -->
                <div class="form-group mb-3">
                    <label asp-for="Salary" class="form-label">Salary</label>
                    <input asp-for="Salary" class="form-control" type="number" placeholder="Enter Salary" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <!-- Farm Selection -->
                <div class="form-group mb-3">
                    <label asp-for="FarmId" class="form-label">Select Farm</label>
                    <select asp-for="FarmId" class="form-control" asp-items="Model.Farms">
                        <option value="">Select a Farm</option>
                    </select>
                    <span asp-validation-for="FarmId" class="text-danger"></span>
                </div>

                <!-- Date Hired -->
                <div class="form-group mb-3">
                    <label asp-for="DateHired" class="form-label">Date Hired</label>
                    <input asp-for="DateHired" class="form-control" type="date" />
                    <span asp-validation-for="DateHired" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success px-4">Create Staff</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
