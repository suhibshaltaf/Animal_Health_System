@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@section Header {
               signup
}
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign Up</h2>
                <form method="POST" class="register-form" id="register-form" asp-controller="Account" asp-action="Register">

                    <div class="form-group">
                        <label for="FullName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="FullName" placeholder="Your Full Name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" placeholder="Your Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Address"><i class="zmdi zmdi-home"></i></label>
                        <input asp-for="Address" placeholder="Your Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="ConfirmPassword" type="password" placeholder="Repeat your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- حقل اختيار الأدوار -->
                    <div class="form-group">
                        <label for="Role"><i class="zmdi zmdi-accounts"></i> Select Role</label>
                        <select asp-for="SelectedRole" class="form-control select2">
                            <option value="">-- Select Role --</option>
                            @if (ViewBag.RolesList != null)
                            {
                                @foreach (var role in ViewBag.RolesList as List<SelectListItem>)
                                {
                                    <option value="@role.Value">@role.Text</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="SelectedRole" class="text-danger"></span>
                    </div>


                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit btn btn-primary" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <img src="~/Dashboard/dist/img/logo.webp" alt="Animal careLogo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <a asp-controller="Account" asp-action="Login" class="signup-image-link pt-4">I am already a member</a>
            </div>
        </div>
    </div>
</section>

@section Script {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Select role",
                allowClear: true
            });
        });
    </script>
}
