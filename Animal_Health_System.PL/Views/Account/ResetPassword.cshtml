@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@section Header {
        Reset password
}
<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <img src="~/Dashboard/dist/img/logo.webp" alt="Animal careLogo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <a asp-controller="Account" asp-action="Login" class="signup-image-link pt-4">Login to your account</a>
                <a asp-controller="Account" asp-action="Register" class="signup-image-link py-4">Create an account</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Reset Password</h2>

                <!-- عرض الأخطاء العامة -->
                <div asp-validation-summary="All" class="text-danger"></div>

                <form method="POST" class="register-form" id="login-form" asp-controller="Account" asp-action="ResetPassword">

                    <div class="form-group">
                        <label asp-for="NewPassword"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="NewPassword" placeholder="New Password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span> <!-- عرض الخطأ هنا -->
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword">
                            <i class="zmdi zmdi-lock"></i>
                        </label>
                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span> <!-- عرض الخطأ هنا -->
                    </div>

                    <input asp-for="Email" type="hidden" />
                    <input asp-for="Token" type="hidden" />

                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Reset" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
